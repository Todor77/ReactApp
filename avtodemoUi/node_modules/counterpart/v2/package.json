{
  "name": "counterpart",
  "version": "2.0.0",
  "description": "A translation and localization library for Node.js and the browser",
  "license": "MIT",
  "keywords": [
    "globalization",
    "g11n",
    "internationalization",
    "i18n",
    "localization",
    "l10n",
    "translation",
    "translate",
    "localize"
  ],
  "scripts": {
    "build": "node ./scripts/build.js",
    "build-cjs": "babel ./modules -d . --ignore '__tests__'",
    "build-umd": "webpack modules/index.js umd/counterpart.js",
    "build-min": "webpack -p modules/index.js umd/counterpart.min.js",
    "prepublish": "node ./scripts/build.js",
    "release": "node ./scripts/release.js",
    "test": "yarn run lint && jest",
    "lint": "xo modules/*.js modules/locales/*.js",
    "start": "webpack-dev-server --config manual-tests/webpack.config.js --inline --content-base manual-tests/build",
    "redux": "webpack-dev-server --config redux-example/webpack.config.js --inline --content-base redux-example/build"
  },
  "author": {
    "name": "Martin Andert",
    "email": "mandert@gmail.com"
  },
  "contributors": [
    {
      "name": "Callum Jefferies",
      "email": "callum@callumj.uk"
    }
  ],
  "homepage": "https://github.com/martinandert/counterpart",
  "repository": {
    "url": "https://github.com/martinandert/counterpart.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/martinandert/counterpart/issues"
  },
  "dependencies": {
    "date-names": "^0.1.7",
    "pluralizers": "^0.1.4",
    "sprintf-js": "^1.0.3"
  },
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-core": "^6.17.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-dev-expression": "^0.2.1",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-es2015-loose": "^8.0.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-1": "^6.16.0",
    "gzip-size": "^3.0.0",
    "in-publish": "^2.0.0",
    "jest": "^16.0.2",
    "pretty-bytes": "^4.0.2",
    "webpack": "^1.13.2",
    "xo": "^0.17.0"
  },
  "xo": {
    "esnext": true,
    "space": 2,
    "envs": [
      "node",
      "browser"
    ],
    "rules": {
      "arrow-parens": [
        "error",
        "always"
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "max-params": [
        "warn",
        5
      ],
      "no-mixed-operators": "off",
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "unicorn/filename-case": "off"
    }
  }
}
